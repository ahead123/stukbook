<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
	
<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
       
        <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %><br>
        <%= f.input :password, required: true, label: false, placeholder: "Password", input_html: {class: "form-control"} %><br>
      </div>

  	  <div class="form-group">
        <%= f.button :submit, "Sign In", class: "btn btn-primary btn-block" %>
      </div>
<% end %>

<%= render "devise/shared/links" %>

		
		</div>
	</div>
</div>